{
  "manifest_version": 3,
  "name": "WPM Tracker",
  "version": "1.0",
  "description": "Track your typing speed in words per minute",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "styles.css"
      ],
      "js": [
        "content.js"
      ],
      "type": "module"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "settings.js",
        "tracker.js",
        "popup.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}